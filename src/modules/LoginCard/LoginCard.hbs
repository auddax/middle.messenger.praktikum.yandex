{{# Card cardClassName='card-modal'}}
  {{# Title level='2'}}
    Вход
  {{/Title}}
  {{# Form formId='loginForm' }}
    <div class="card-modal__inputs">
      {{#each loginInputs}}
        {{{ Input 
          className='input-modal' 
          className=this.className 
          id=this.id 
          label=this.label 
          name=this.name 
          htmlType=this.htmlType 
          onFocusOut=this.focusOutHandler
        }}}
      {{/each}}
    </div>
    {{# Button type='primary' page='chatPage' onClick=this.submitHandler }}
      Войти
    {{/Button}}
  {{/Form}}
  {{# Button type='link' page='signupPage'}}
    Создать аккаунт
  {{/Button}}
{{/Card}}
