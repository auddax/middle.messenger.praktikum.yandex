{{# Backdrop }}
  {{# Modal modalClassName='user-add__modal'}}
    {{# Form formId='userNameForm' formClassName='modal__form-controls'}}
      {{{ Input 
        label='Логин пользователя' 
        className='modal__input' 
        name='user_name' 
        id='userNameInput' 
        onFocusOut=this.focusOutHandler 
      }}}
      {{# Button type='primary' onClick=this.handleSearchUser}}
        Поиск
      {{/Button}}
    {{/Form}}
    <ul class='modal__list'>
      {{#each this.users}}
        {{# Item itemClassName='modal__item'}}
          {{ this.login }}
          {{# Button type='ghost' buttonId=this.id onClick=../handleSelectUser}}
            {{#if this.selected}}
              <svg viewBox="64 64 896 896" focusable="false" data-icon="check-circle" width="1em" height="1em" fill="currentColor" aria-hidden="true"><path d="M699 353h-46.9c-10.2 0-19.9 4.9-25.9 13.3L469 584.3l-71.2-98.8c-6-8.3-15.6-13.3-25.9-13.3H325c-6.5 0-10.3 7.4-6.5 12.7l124.6 172.8a31.8 31.8 0 0051.7 0l210.6-292c3.9-5.3.1-12.7-6.4-12.7z"></path><path d="M512 64C264.6 64 64 264.6 64 512s200.6 448 448 448 448-200.6 448-448S759.4 64 512 64zm0 820c-205.4 0-372-166.6-372-372s166.6-372 372-372 372 166.6 372 372-166.6 372-372 372z"></path></svg>
            {{else}}
              <svg viewBox="64 64 896 896" focusable="false" data-icon="plus-circle" width="1em" height="1em" fill="currentColor" aria-hidden="true"><path d="M696 480H544V328c0-4.4-3.6-8-8-8h-48c-4.4 0-8 3.6-8 8v152H328c-4.4 0-8 3.6-8 8v48c0 4.4 3.6 8 8 8h152v152c0 4.4 3.6 8 8 8h48c4.4 0 8-3.6 8-8V544h152c4.4 0 8-3.6 8-8v-48c0-4.4-3.6-8-8-8z"></path><path d="M512 64C264.6 64 64 264.6 64 512s200.6 448 448 448 448-200.6 448-448S759.4 64 512 64zm0 820c-205.4 0-372-166.6-372-372s166.6-372 372-372 372 166.6 372 372-166.6 372-372 372z"></path></svg>
            {{/if}}
          {{/Button}}
        {{/Item}}
      {{/each}}
    </ul>
    {{#if this.users}}
      {{# Button type='primary' buttonClassName='modal__add' onClick=this.handleAddUser}}
        Добавить пользователей
      {{/Button}}
    {{/if}}
    {{#if this.success}}
      {{# Title level='4'}}
        <svg viewBox="64 64 896 896" focusable="false" data-icon="check-circle" width="1em" height="1em" fill="currentColor" aria-hidden="true"><path d="M512 64C264.6 64 64 264.6 64 512s200.6 448 448 448 448-200.6 448-448S759.4 64 512 64zm193.5 301.7l-210.6 292a31.8 31.8 0 01-51.7 0L318.5 484.9c-3.8-5.3 0-12.7 6.5-12.7h46.9c10.2 0 19.9 4.9 25.9 13.3l71.2 98.8 157.2-218c6-8.3 15.6-13.3 25.9-13.3H699c6.5 0 10.3 7.4 6.5 12.7z"></path></svg>
        Пользователи добавлены
      {{/Title}}
    {{/if}}
    {{#if this.notFound}}
      {{# Title level='4'}}
        Пользователи не найдены
      {{/Title}}
    {{/if}}
    {{#if this.error}}
      <div class='validation-message'>Ошибка в отправке данных, проверьте выбор пользователя</div>
    {{/if}}
  {{/Modal}}
{{/Backdrop}}