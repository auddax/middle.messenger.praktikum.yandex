{{# Page className='page-chat'}}
  {{# Row}}
    {{# Col colClassName='left-col'}}
      <div class="page-chat__chat-controls">
      {{# Button type='link' page="profilePage"}}
        Профиль
      {{/Button}}
      {{# Form}}
        {{{ Input label='Поиск' className='page-chat__input' name='user_chat' id='chatSearchInput' }}}
      {{/Form}}
      </div>
      <div class="page-chat__users">
      {{#each userCards}}
        {{{ UserCard 
          avatarAltText=this.avatarAltText 
          avatarType=this.avatarType 
          level=this.level 
          userName=this.userName 
          userInitials=this.userInitials 
          userCardText=this.userCardText 
          userCardDateTime=this.userCardDateTime 
          badgeText=this.badgeText
        }}}
      {{/each}}
      </div>
    {{/Col}}
    {{# Col colClassName='right-col'}}
      <div class="page-chat__user-info">
        {{{ Avatar avatarType='card-user' userInitials='ИИ' }}}
        {{# Title level='3' }}
          Иван
        {{/Title}}
      </div>
      <div class="page-chat__messages">
        {{#each userMessages}}
          {{# Message messageClassName=this.messageClassName }}
            {{ this.userMessage }}
          {{/Message}}
        {{/each}}
      </div>
      {{# Form formClassName="page-chat__message-controls"}}
        {{{ Input label='Сообщение' className='page-chat__input' name='message' id='chatMessageInput' }}}
        {{# Button type='secondary'}}
          <svg viewBox="64 64 896 896" focusable="false" data-icon="right" width="1em" height="1em" fill="currentColor" aria-hidden="true"><path d="M765.7 486.8L314.9 134.7A7.97 7.97 0 00302 141v77.3c0 4.9 2.3 9.6 6.1 12.6l360 281.1-360 281.1c-3.9 3-6.1 7.7-6.1 12.6V883c0 6.7 7.7 10.4 12.9 6.3l450.8-352.1a31.96 31.96 0 000-50.4z"></path></svg>
        {{/Button}}
      {{/Form}}
    {{/Col}}
  {{/Row}}
{{/Page}}
